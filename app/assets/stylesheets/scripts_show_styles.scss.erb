/*MOBILE STYLES */
@media (max-width: 481px) {


#please-help {
  position: relative;
  margin-top: 30%;
  margin-left: 25%

}


#new-story-form{
  margin-right: 30%;
  margin-left: 25%;

}
/* Makes responsive fields. Sets size and field alignment.*/
input[type=file]{
margin-bottom: 20px;
margin-top: 10px;
width:100%;
padding: 10px;
border-radius:5px;
border:1px solid #7ac9b7;
}
input[type=submit]
{
margin-bottom: 20px;
width:100%;
padding: 10px;
border-radius:5px;
border:1px solid #7ac9b7;
background-color: #4180C5;
color: aliceblue;
font-size:15px;
cursor:pointer;
}

#script {
  margin-right: 20%;
  margin-left: 20%;
  padding-bottom: 100px;

}
}





/*DESKTOP STYLES*/
@media (min-width: 481px) {

#genre-container {
  position: relative;
  margin-left: 25%;
  margin-right: 25%;
  border: solid;
  max-width: 700px;

}


#genre-title {
  position: absolute;
  margin-top: 25%;
  margin-left: 18%

}

#character-genre {
  position: absolute;
  left: 10%;
  bottom: 10%;
  width: 400px;
  height: 240px;
  background: url("<%= asset_path 'alientwo.png' %>");
  animation: play 0.7s steps(4) infinite;

}

@keyframes play {
   100% { background-position: -1280px; }
}
}
