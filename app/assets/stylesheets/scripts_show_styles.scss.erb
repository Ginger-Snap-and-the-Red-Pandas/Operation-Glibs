/*MOBILE STYLES */
@media (max-width: 480px) {

#scripts-show {
  position: fixed;
  height: 500px;
  overflow: auto;
  margin-top: 27%;
  margin-bottom: 30%;

}

#please-help {
  position: relative;
  margin-top: 10%;
  margin-left: 17%;
  width: 100%;
  font-size: 1.2em;
  overflow-wrap: normal;

}

.curtain-show {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  margin: auto;
  z-index: -1;
}

#new-story-form{
  margin-right: 30%;
  margin-left: 25%;

}

/* Makes responsive fields. Sets size and field alignment.*/
input[type=file]{
margin-bottom: 20px;
margin-top: 10px;
width:100%;
padding: 5px;
border-radius:5px;
background-color: white;
border:1px solid #7ac9b7;
color: black;
font-size: 0.1em;
}
input[type=submit]
{
margin-bottom: 20px;
width:100%;
padding: 5px;
border-radius:5px;
border:1px solid #7ac9b7;
background-color: #4180C5;
color: aliceblue;
font-size:15px;
cursor:pointer;
}

#script {
  margin-right: 20%;
  margin-left: 20%;
  padding-bottom: 100px;

}

#random-script {
  width: 100%;
  margin-left: 15%;
  font-size: 1em;
  overflow-wrap: normal;
}

.field, .actions {
  margin: 2%
}
}






/*/*DESKTOP STYLES*/
@media (min-width: 481px) {

#scripts-show {

  position: relative;
  margin-left: 25%;
  margin-right: 25%;
  border: solid;
  max-width: 700px;

}

#please-help {
  position: absolute;
  top: 0;
  bottom: 0;
  margin-top: 20%;
  margin-left: 20%;
  font-size: 1.5em;

}


#new-story-form{
  position: absolute;
  top: 150px;
  bottom: 0;
  margin-right: 30%;
  margin-left: 25%;

}



#script {
  position: absolute;
  margin-right: 20%;
  margin-left: 20%;
  padding-bottom: 100px;

}

}

