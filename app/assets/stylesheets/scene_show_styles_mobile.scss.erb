/*MOBILE STYLES */
@media (min-width: 320px) and (max-width: 480px) {


#curtain-container {
  position: relative;
  width: auto;
  height: 500px;
  max-width: 100%;
  max-height: 100%;
  margin: auto;
}

.story-link {
  position: absolute;
  top: 200px;
  left: 80px;

}
/*Horizontal styles tall */
.scene-image {
  position: relative;
  width: 100%;
  height: 100%;
  margin: 0px auto;
  margin-top: 20%;
}

.curtain {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  margin: auto;
  z-index: 4;
}

.curtain-front {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 0;
}

.curtain-front.start-page {
  // z-index: -1;
}



.bubble-wrap {
  position: fixed;
  left: 45%;
  bottom: 10%;
  width: 50%;
  margin: auto;
  z-index: 4;
}

.bubble {
  max-height: 125px;
  position: relative;
  padding: 15px;
  background: #FFFFFF;
  border-radius: 4px;
  border: #7F7F7F solid 1px;
  font-size: 1em;
  line-height: 1.25em;
  z-index: 1;
  overflow: scroll;
}

#previous-button {
  -ms-transform: rotate(45deg); /* IE 9 */
  -webkit-transform: rotate(45deg); /* Chrome, Safari, Opera */
  transform: rotate(45deg);
  border-bottom: 6px solid black;
  border-left: 6px solid black;
  height: 25px;
  width: 25px;
  top:50%;
  left: 3%;
  position: fixed;
  z-index: 9999;
}

#next-button {
  -ms-transform: rotate(225deg); /* IE 9 */
  -webkit-transform: rotate(225deg); /* Chrome, Safari, Opera */
  transform: rotate(225deg);
  border-bottom: 6px solid black;
  border-left: 6px solid black;
  height: 25px;
  width: 25px;
  top:50%;
  right: 3%;
  position: fixed;
  z-index: 9999;
}


#character {
  position: fixed;
  right: 10%;
  bottom: 5%;
  width: 400px;
  height: 240px;
  background: url("<%= asset_path 'alientwo.png' %>");
  animation: play 0.7s steps(4) infinite;
  z-index: 4;
}

@keyframes play {
   100% { background-position: -1280px; }
}



}
