/*holds all elements for story*/
#story-container {
  position: relative;
  top: 0;
  left: 0;
}

/*user photo*/
.scene-image {
   position: relative;
  top: 0;
  left: 0;

}

.curtain {
  position: absolute;
  top: 0;
  left: 0;
}

#character {
  position: absolute;
  left: 10px;
  bottom: 20px;
  width: 400px;
  height: 240px;
  background: url("<%= asset_path 'alientwo.png' %>");
  animation: play 0.7s steps(4) infinite;
}

@keyframes play {
   100% { background-position: -1280px; }
}
