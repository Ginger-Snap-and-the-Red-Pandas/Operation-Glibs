/*MOBILE STYLES */

#story-container {
  position: relative;
  width: auto;
  height: auto;
  max-width: 100%;
  max-height: 100%;
  margin: auto;
}

/*Horizontal styles tall */
.scene-image {
  position: relative;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  margin: auto;
}

.curtain {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  margin: auto;
  z-index: 999;
}
