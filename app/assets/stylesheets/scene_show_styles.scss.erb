@media only screen and (min-width: 481px) {


#curtain-container {
  position: relative;
  margin-left: 25%;
  margin-right: 25%;
  border: solid;
  max-width: 700px;

}

.curtain {
  // display: ;
  width: 100%;
  z-index: 4;
}

#character {
  position: absolute;
  left: 0;
  bottom: 4%;
  width: 400px;
  height: 240px;
  background: url("<%= asset_path 'alientwo.png' %>");
  animation: play 0.7s steps(4) infinite;
  z-index: 4;
}

@keyframes play {
   100% { background-position: -1280px; }
}

.curtain-front {
  position: absolute;
  width: 100%;
  top: 0;
  left: 0;
  z-index: 1;
}

.curtain-front.start-page {
  z-index: -1;
}
.bubble-wrap {
  position: absolute;
  left: 55%;
  bottom: 12%;
  width: 40%;
  height: 30%;
  margin:  auto;
  overflow-x: auto;
  z-index: 4;

}

.bubble {
  padding: 20px;
  background: #FFFFFF;
  border-radius: 4px;
  border: #7F7F7F solid 1px;
  font-size: 1em;
  line-height: 1.25em;
  // z-index: 99999999;
}

#previous-button {
  -ms-transform: rotate(45deg); /* IE 9 */
  -webkit-transform: rotate(45deg); /* Chrome, Safari, Opera */
  transform: rotate(45deg);
  border-bottom: 6px solid black;
  border-left: 6px solid black;
  height: 25px;
  width: 25px;
  top:50%;
  left: 3%;
  position: fixed;

}

#next-button {
  -ms-transform: rotate(225deg); /* IE 9 */
  -webkit-transform: rotate(225deg); /* Chrome, Safari, Opera */
  transform: rotate(225deg);
  border-bottom: 6px solid black;
  border-left: 6px solid black;
  height: 25px;
  width: 25px;
  top:50%;
  right: 3%;
  position: fixed;

}

}
