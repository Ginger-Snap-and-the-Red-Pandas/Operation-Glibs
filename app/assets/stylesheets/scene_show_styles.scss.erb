/*MOBILE STYLES */
#show-page {
  background-color: #333232;
}


#story-container {
  position: relative;
  width: auto;
  height: auto;
  max-width: 100%;
  max-height: 100%;
  margin: auto;
}

/*Horizontal styles tall */
.scene-image {
  position: relative;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  margin: auto;
  margin-top: 80px;
}

.curtain {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  margin: auto;
  z-index: 1;
}

.bubble-wrap {
  position: fixed;
  left: 45%;
  bottom: 10%;
  width: 50%;
  margin: auto;
  z-index: 2;
}

.bubble {
  max-height: 175px;
  position: relative;
  padding: 15px;
  background: #FFFFFF;
  border-radius: 4px;
  border: #7F7F7F solid 1px;
  font-size: 1em;
  line-height: 1.25em;
  z-index: 1;
  overflow: scroll;
}

