#previous-button {
  -ms-transform: rotate(45deg); /* IE 9 */
  -webkit-transform: rotate(45deg); /* Chrome, Safari, Opera */
  transform: rotate(45deg);
  border-bottom: 6px solid black;
  border-left: 6px solid black;
  height: 25px;
  width: 25px;
  top:50%;
  left: 3%;
  position: fixed;
  z-index: 9999;
}

.next-button {
  -ms-transform: rotate(225deg); /* IE 9 */
  -webkit-transform: rotate(225deg); /* Chrome, Safari, Opera */
  transform: rotate(225deg);
  border-bottom: 6px solid black;
  border-left: 6px solid black;
  height: 25px;
  width: 25px;
  top:50%;
  right: 3%;
  position: fixed;
  z-index: 9999;
}


#character {
  position: fixed;
  right: 10%;
  bottom: 5%;
  width: 400px;
  height: 240px;
  background: url("<%= asset_path 'alientwo.png' %>");
  animation: play 0.7s steps(4) infinite;
  z-index: 5;
}

@keyframes play {
   100% { background-position: -1280px; }
}



/*DESKTOP STYLES*/

@media (min-width: 1281px) {

/*holds all elements for story*/
#show-page {
  margin: auto;
  width: 50%;
}

#story-container {
  position: relative;
  top: 0;
  left: 0;

}

/*user photo*/
.scene-image {
   position: relative;
  top: 0;
  left: 0;
  height: 720px;
  max-width: 720px;

}

.curtain {
  position: absolute;
  top: 0;
  left: 0;
}

#character {
  position: absolute;
  left: 10px;
  bottom: 20px;
  width: 400px;
  height: 240px;
  background: url("<%= asset_path 'alientwo.png' %>");
  animation: play 0.7s steps(4) infinite;
}

@keyframes play {
   100% { background-position: -1280px; }
}


#get-story {
  overflow-x: auto;
}

.bubble-wrap {
  position: absolute;
  left: 300px;
  bottom: 20px;
  width: 300px;
  margin: 20px auto;
  overflow-x: auto;
}

.bubble {
  position: relative;
  padding: 20px;
  background: #FFFFFF;
  border-radius: 4px;
  border: #7F7F7F solid 1px;
  font-size: 1em;
  line-height: 1.25em;
  z-index: 999999999999;
}

.bubble:after {
  content: '';
  position: absolute;
  border-style: solid;
  border-width: 16px 16px 16px 0;
  border-color: transparent #FFFFFF;
  display: block;
  width: 0;
  left: -15px;
  top: 50%;
  margin-top: -16px

}

.bubble:before {
  content: '';
  position: absolute;
  border-style: solid;
  border-width: 16px 16px 16px 0;
  border-color: transparent #7F7F7F;
  display: block;
  width: 0;
  z-index: 0;
  left: -16px;
  top: 50%;
  margin-top: -16px;
}

#new-glib {
  width: 100%;
}

#next-button {
  float: right;
}

#previous-button {
  float: left;
}
}
