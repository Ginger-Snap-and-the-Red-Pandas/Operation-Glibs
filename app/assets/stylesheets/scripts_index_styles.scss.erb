
/*DESKTOP STYLES*/
@media (min-width: 481px) {

#scripts-container {
  position: relative;
  margin-left: 25%;
  margin-right: 25%;
  border: solid;
  max-width: 700px;

}

#choose-script {
  position: absolute;
  margin-top: 25%;
  margin-left: 25%

}

#scripts-list {
  position: absolute;
  top: 0;
  bottom: 0;
  margin-top: 40%;
  margin-left: 25%;
}

}



/*MOBILE STYLES */
@media (max-width: 481px) {

#choose-script {
   margin-top: 30%;
   margin-left: 20%;
}


#scripts-list {
  margin-top: 20%;
  margin-left: 25%;
}

#random-story {
  display: inline-block;
  position: relative;
  margin-left: 25%;
  margin-top: 40%;
  color: lightgreen;
  text-decoration: underline;
}

}